<% layout('/layouts/boilerplate') -%>
<style>
  #container {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    margin-right: 1.2rem;
  }
  .content {
    margin-right: 1.6rem;
    margin-top: 1rem;
    text-align: center;
    opacity: 0.7;
  }
  .content:hover {
    opacity: 1;
    cursor: pointer;
  }

  .content p {
    font-size: 0.7rem;
  }

  .taxInfo {
    display: none;
  }

  .toggleswitch {
    border: 1px solid #121212;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    margin-left: 3rem;
    display: flex;
    align-items: center;
  }

  .content a {
    all: unset;
  }
</style>
<div id="container" class="collapse">
  <div class="content">
    <div>
      <a href="/category/views"
        ><i class="fa-solid fa-person-through-window"></i
      ></a>
    </div>
    <p>Amazing views</p>
  </div>
  <div class="content">
    <div>
      <a href="/category/rooms"><i class="fa-solid fa-bed"></i></a>
    </div>
    <p>Rooms</p>
  </div>
  <div class="content">
    <div>
      <a href="/category/beach"><i class="fa-solid fa-umbrella-beach"></i></a>
    </div>
    <p>Beach</p>
  </div>

  <div class="content">
    <div>
      <a href="/category/city"><i class="fa-solid fa-tree-city"></i></a>
    </div>
    <p>Cities</p>
  </div>
  <div class="content">
    <div>
      <a href="/category/trends"
        ><i class="fa-solid fa-fire-flame-curved"></i
      ></a>
    </div>
    <p>Trending</p>
  </div>
  <div class="content">
    <div>
      <a href="/category/arctic"><i class="fa-solid fa-snowflake"></i></a>
    </div>
    <p>Arctic</p>
  </div>
  <div class="content">
    <div>
      <a href="/category/boat"><i class="fa-solid fa-sailboat"></i></a>
    </div>
    <p>Boats</p>
  </div>
  <div class="content">
    <div>
      ><a href="/category/river"><i class="fa-solid fa-water"></i></a>
    </div>
    <p>Rivers</p>
  </div>
  <div class="content">
    <div>
      <a href="/category/mountain"><i class="fa-solid fa-mountain-sun"></i></a>
    </div>
    <p>Moutains</p>
  </div>
  <div class="content">
    <div>
      <a href="/category/farm"><i class="fa-solid fa-cow"></i></a>
    </div>
    <p>Farm</p>
  </div>
  <div class="content">
    <div>
      <a href="/category/container"><i class="fa-solid fa-box-open"></i></a>
    </div>
    <p>Container</p>
  </div>

  <div class="toggleswitch">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault">
        Display total after taxes
      </label>
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <%for(let list of allList) {%>
  <a href="/listings/<%=list._id%>" class="listing-link">
    <!-- Bootstrap card  -->
    <div class="card listing-card col mt-2">
      <img
        src="<%= list.image.url %>"
        class="card-img-top"
        alt="list-image"
        style="height: 18rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= list.title %></b> <br />
          &#8377; <%= list.price.toLocaleString("en-IN")%>/night
          <i class="taxInfo">&nbsp;+18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <%}%>
</div>

<script>
  let switchbtn = document.getElementById("flexSwitchCheckDefault");
  switchbtn.addEventListener("click", () => {
    let tax = document.querySelectorAll(".taxInfo");
    for (info of tax) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>

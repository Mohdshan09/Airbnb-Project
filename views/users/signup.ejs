<% layout('/layouts/boilerplate') -%>

<div class="row mt-3">
  <h2 class="col-6 offset-3">Signup</h2>
  <div class="col-6 offset-3">
    <form method="post" action="/signup" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="username" class="form-label"></label>
        Username
        <input
          type="text"
          name="username"
          placeholder="enter your username"
          id="username"
          class="form-control"
          required
        />
        <div class="valid-feedback">username looks strong !</div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label"></label>
        Email
        <input
          type="email"
          name="email"
          placeholder="enter your email"
          id="email"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label"></label>
        Password
        <input
          type="password"
          name="password"
          placeholder="enter your password"
          id="password"
          class="form-control"
          required
        />
        <div class="invalid-feedback">enter your valid password !</div>
        <div class="valid-feedback">password looks strong !</div>
      </div>

      <button class="btn btn-success">Signup</button>
    </form>
  </div>
</div>
